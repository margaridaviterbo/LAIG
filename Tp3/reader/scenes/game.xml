<SCENE>

<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>

<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>

<LIGHTS>
    <LIGHT id="light0">
        <enable value ="1" />
        <position  x="-11.5" y="8.5" z="-1" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light1">
        <enable value ="1" />
        <position x="30" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light2">
        <enable value ="1" />
        <position x="0" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light3">
        <enable value ="1" />
        <position x="30" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />
    </LIGHT>
</LIGHTS>

<TEXTURES>
     <TEXTURE id="sky">
        <file path="images/sky.jpg" />
        <amplif_factor s="90" t="90" />
    </TEXTURE>
     <TEXTURE id="moon">
        <file path="images/moon.jpg" />
        <amplif_factor s="5" t="5" />
    </TEXTURE>
</TEXTURES>

<MATERIALS>

    <MATERIAL id="defaultMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />
        <ambient r="0.4" g="0.4" b="0.4" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>
     <MATERIAL id="starMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.3" a="0" />
        <diffuse r="0.0" g="0.0" b="0.3" a="0" />
        <ambient r="0.0" g="0.0" b="0.3" a="0" />
        <emission r="0.0" g="0.0" b="0.3" a="0" />
    </MATERIAL>

</MATERIALS>

<ANIMATIONS>
</ANIMATIONS>

<NODES>
    <ROOT id="root" />
    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />
         
        <DESCENDANTS>
          <NODEREF id ="cube"/>
          <NODEREF id = "sphere"/>
       </DESCENDANTS>
    </NODE>

   <NODE id="cube">
        <MATERIAL id="null"/>
        <TEXTURE id="sky"/>

        <TRANSLATION x="-500" y="-5" z="-500"/>
        <DESCENDANTS>
            <NODEREF id="faceCubo1" />
            <NODEREF id="faceCubo2" />
            <NODEREF id="faceCubo3" />
            <NODEREF id="faceCubo4" />
            <NODEREF id="faceCubo5" />
            <NODEREF id="faceCubo6" />   
        </DESCENDANTS>
   </NODE>

    <NODE id="faceCubo1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
			<LEAF  type="rectangle"  args="0 1000 1000 0" />
        </DESCENDANTS>
    </NODE>

     
    <NODE id="faceCubo2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

		<ROTATION axis="y" angle="-90" />

        <DESCENDANTS>
			<LEAF  type="rectangle" args="0 1000 1000 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="faceCubo3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="1000" y="0" z="0" />
		<ROTATION axis="y" angle="-90" />

        <DESCENDANTS>
			<LEAF  type="rectangle" args="0 1000 1000 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="faceCubo4">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <ROTATION axis="x" angle="90" />
        
        <DESCENDANTS>
			<LEAF  type="rectangle"  args="0 1000 1000 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="faceCubo5">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="1000" z="0" />
        <ROTATION axis="x" angle="90" />

        <DESCENDANTS>
 			<LEAF  type="rectangle"  args="0 1000 1000 0" />
       </DESCENDANTS>
    </NODE>

    <NODE id="faceCubo6">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="0" z="1000" />

        <DESCENDANTS>
			<LEAF  type="rectangle"  args="0 1000 1000 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="sphere">
        <MATERIAL id="null"/>
        <TEXTURE id ="moon"/>

        <TRANSLATION x="-10" y="7" z="0" />

        <DESCENDANTS>
            <LEAF id="sphere1" type="sphere"  args= "3 20 20"/>
        </DESCENDANTS>
    </NODE>
   
</NODES>

</SCENE>